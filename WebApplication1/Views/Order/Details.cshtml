@model WebApplication1.Models.Order

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Order Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderID</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
    </dl>
</div>

<h4>Order Items</h4>
@if (Model.OrderItems != null && Model.OrderItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Item Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.Item.ItemID</td>
                    <td>@orderItem.Item.ItemName</td>
                    <td>@orderItem.QuantityOrdered</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No order items found for this order.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
