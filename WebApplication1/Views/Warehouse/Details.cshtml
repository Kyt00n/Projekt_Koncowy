@model WebApplication1.Models.Warehouse

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Szczegóły Magazynu</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Warehouse ID</dt>
        <dd class="col-sm-10">@Model.WarehouseID</dd>
        
        <dt class="col-sm-2">Warehouse Name</dt>
        <dd class="col-sm-10">@Model.WarehouseName</dd>
        
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<h4>Inwentaryzacja</h4>
@if (Model.Items != null && Model.Items.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Ilość</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemID</td>
                <td>@item.ItemName</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.QuantityInStock</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No items found in this warehouse.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>